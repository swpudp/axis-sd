{
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/api/sd/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 800
        },
        {
          "Host": "localhost",
          "Port": 8056
        }
      ],
      //"LoadBalancer": "RoundRobin",
      "LoadBalancerOptions": {
        "Type": "LeastConnection",
        "Key": "sdbalancer"
      },
      "UpstreamPathTemplate": "/api/sd/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      //"AddHeadersToRequest": {},
      //"AddClaimsToRequest": {},
      //"RouteClaimsRequirement": {},
      //"AddQueriesToRequest": {},
      "RequestIdKey": "test",
      //"FileCacheOptions": {
      //  "TtlSeconds": 0,
      //  "Region": ""
      //},
      "ReRouteIsCaseSensitive": true,
      "ServiceName": "sd",
      "QoSOptions": { //服务质量与熔断
        "ExceptionsAllowedBeforeBreaking": 5, //允许多少个异常请求
        "DurationOfBreak": 3, //熔断时间
        "TimeoutValue": 5000 //如果下游请求的处理时间超过多少则自动将请求设置为超时
      },
      "RateLimitOptions": { //限流
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1s", //统计时间段
        "PeriodTimespan": 10, //多少秒之后客户端可以重试
        "Limit": 100000 //在统计时间段内允许的最大请求数量
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "",
        "AllowedScopes": []
      },
      "HttpHandlerOptions": {
        "AllowAutoRedirect": true,
        "UseCookieContainer": true,
        "UseTracing": true
      },
      "UseServiceDiscovery": false
    }
  ],
  "GlobalConfiguration": {
    //"ServiceDiscoveryProvider": {
    //  "Host": "localhost",
    //  "Port": 8500
    //}
  }
}

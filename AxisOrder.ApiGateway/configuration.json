{
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/api/sd/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 800
        },
        {
          "Host": "localhost",
          "Port": 8056
        },
        {
          "Host": "localhost",
          "Port": 22451
        }
      ],
      //"LoadBalancer": "RoundRobin",
      "LoadBalancerOptions": {
        "Type": "LeastConnection",
        "Key": "sdbalancer"
      },
      "UpstreamPathTemplate": "/api/sd/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      //"AddHeadersToRequest": {},
      //"AddClaimsToRequest": {},
      //"RouteClaimsRequirement": {},
      //"AddQueriesToRequest": {},
      "RequestIdKey": "test",
      //"FileCacheOptions": {
      //  "TtlSeconds": 0,
      //  "Region": ""
      //},
      "ReRouteIsCaseSensitive": true,
      "ServiceName": "sd",
      "QoSOptions": { //服务质量与熔断
        "ExceptionsAllowedBeforeBreaking": 5, //允许多少个异常请求
        "DurationOfBreak": 15, //熔断时间
        "TimeoutValue": 15 //如果下游请求的处理时间超过多少则自动将请求设置为超时
      },
      "RateLimitOptions": { //限流
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "5s", //统计时间段
        "PeriodTimespan": 30, //多少秒之后客户端可以重试
        "Limit": 10000 //在统计时间段内允许的最大请求数量
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "",
        "AllowedScopes": []
      },
      "HttpHandlerOptions": {
        "AllowAutoRedirect": true,
        "UseCookieContainer": true,
        "UseTracing": true
      },
      "UseServiceDiscovery": false
    }
  ],
  "GlobalConfiguration": {
    //"ServiceDiscoveryProvider": {
    //  "Host": "localhost",
    //  "Port": 8500
    //}
  }
}
